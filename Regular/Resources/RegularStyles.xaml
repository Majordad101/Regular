<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="ButtonBackgroundColorDefault" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="TextBoxBorderColorDefault" Color="#BFBFBF"/>
    <SolidColorBrush x:Key="ButtonBackgroundColorHighlight" Color="#F1F0F2"/>
    <SolidColorBrush x:Key="ButtonBackgroundColorLowlight" Color="#B2B2B2"/>
    <SolidColorBrush x:Key="ButtonBackgroundColorLightGreen" Color="#DFF2DA"/>
    <SolidColorBrush x:Key="FontColorDefault" Color="#333333"/>
    <SolidColorBrush x:Key="RedColour" Color="LightSalmon"/>
    <SolidColorBrush x:Key="FontColorWarning" Color="#E60000"/>
    <SolidColorBrush x:Key="FontColorFaded" Color="#808080"/>
    <SolidColorBrush x:Key="FontColorGreen" Color="#1A7800"/>
    <SolidColorBrush x:Key="EllipseColorGreen" Color="#70BC81"/>
    <SolidColorBrush x:Key="EllipseColorGray" Color="#CCCBCB"/>
    <SolidColorBrush x:Key="EllipseColorRed" Color="#EC6849"/>
    <SolidColorBrush x:Key="BackgroundColorWarning" Color="#FDEAE4"/>
    <SolidColorBrush x:Key="UnderlineBlueColor" Color="#3CA6DA"/>
    <SolidColorBrush x:Key="WindowBackgroundColor" Color="#FAFAFA"/>
    <Style x:Key="StandardWindow" TargetType="Window">
        <Setter Property="ResizeMode" Value="NoResize"/>
        <Setter Property="Topmost" Value="False"/>
        <Setter Property="Background" Value="{StaticResource WindowBackgroundColor}"/>
        <Setter Property="Icon" Value="../Resources/RegularIcon32px.png"/>
    </Style>
    <Style x:Key="StandardText" TargetType="TextBlock">
        <Setter Property="OverridesDefaultStyle" Value="True"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontWeight" Value="Regular"/>
        <Setter Property="FontSize" Value="12px"/>
        <Setter Property="Foreground" Value="{StaticResource FontColorDefault}"/>
    </Style>
    <Style x:Key="WarningTextBox" TargetType="TextBox">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="12px"/>
        <Setter Property="Foreground" Value="{StaticResource FontColorWarning}"/>
    </Style>
    <Style x:Key="StandardLabel" TargetType="{x:Type Label}">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontWeight" Value="Regular"/>
        <Setter Property="FontSize" Value="12px"/>
        <Setter Property="Padding" Value="0px"/>
        <Setter Property="Foreground" Value="{StaticResource FontColorDefault}"/>
    </Style>
    <Style x:Key="StandardComboBox" TargetType="{x:Type ComboBox}">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontWeight" Value="Regular"/>
        <Setter Property="FontSize" Value="12px"/>
        <Setter Property="Foreground" Value="{StaticResource FontColorDefault}"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="Height" Value="22px"/>
        <Setter Property="Margin" Value="0px"/>
        <Setter Property="Padding" Value="5,0,0,0"/>
        <Setter Property="BorderThickness" Value="1px"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="IsReadOnly" Value="True"/>
        <Setter Property="IsEditable" Value="True"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>
    <Style x:Key="StandardTextBox" TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource WindowBackgroundColor}"/>
        <Setter Property="Foreground" Value="{StaticResource FontColorDefault}"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontWeight" Value="Regular"/>
        <Setter Property="FontSize" Value="12px"/>
        <Setter Property="Height" Value="22px"/>
        <Setter Property="Margin" Value="0px"/>
        <Setter Property="Padding" Value="3,0,0,0"/>
        <Setter Property="BorderThickness" Value="1px"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="BorderBrush" Value="{StaticResource TextBoxBorderColorDefault}"/>
    </Style>
    <Style x:Key="StandardListBox" TargetType="ListBox">
        <Setter Property="Background" Value="{StaticResource WindowBackgroundColor}"/>
        <Setter Property="Foreground" Value="{StaticResource FontColorDefault}"/>
        <Setter Property="Margin" Value="0px"/>
        <Setter Property="Padding" Value="0px"/>
        <Setter Property="BorderThickness" Value="0px"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
    </Style>
    <Style x:Key="LinkText" TargetType="TextBlock">
        <Setter Property="TextDecorations" Value="Underline"/>
        <Setter Property="Foreground" Value="Aqua"/>
    </Style>
    <Style x:Key="FadedText" TargetType="TextBlock">
        <Setter Property="OverridesDefaultStyle" Value="True"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontWeight" Value="Regular"/>
        <Setter Property="FontSize" Value="13px"/>
        <Setter Property="Foreground" Value="{StaticResource FontColorFaded}"/>
    </Style>
    <Style x:Key="RectangleMouseOverStyle" TargetType="{x:Type Rectangle}">
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Fill" Value="#3FA8D4"/>
            </Trigger>
            <Trigger Property="IsMouseOver" Value="False">
                <Setter Property="Fill" Value="#EBEBEB"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="WarningText" TargetType="TextBlock">
        <Setter Property="OverridesDefaultStyle" Value="True"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="12px"/>
        <Setter Property="Foreground" Value="{StaticResource FontColorWarning}"/>
    </Style>

    <Style x:Key="StandardButton" TargetType="Button">
        <Setter Property="OverridesDefaultStyle" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" ClipToBounds="True">
                        <Rectangle x:Name="BackgroundRectangle" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Fill="{StaticResource ButtonBackgroundColorDefault}"/>
                        <DockPanel Name="ContentPresenterDockPanel">
                            <ContentPresenter x:Name="ContentPresenter" Content="{TemplateBinding Content}" TextBlock.Foreground="{StaticResource FontColorDefault}" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <ContentPresenter.Resources>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource ResourceKey=StandardText}"/>
                                </ContentPresenter.Resources>
                            </ContentPresenter>
                        </DockPanel>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Rectangle.Fill" TargetName="BackgroundRectangle" Value="{StaticResource ButtonBackgroundColorLowlight}"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="EditRulePartButton" TargetType="Button">
        <Setter Property="OverridesDefaultStyle" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" ClipToBounds="True">
                        <Rectangle x:Name="BackgroundRectangle" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Fill="#D0D0CF" RadiusX="2" RadiusY="2"/>
                        <DockPanel Name="ContentPresenterDockPanel">
                            <ContentPresenter x:Name="ContentPresenter" Content="{TemplateBinding Content}" TextBlock.Foreground="{StaticResource FontColorDefault}" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <ContentPresenter.Resources>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource ResourceKey=StandardText}"/>
                                </ContentPresenter.Resources>
                            </ContentPresenter>
                        </DockPanel>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Rectangle.Fill" TargetName="BackgroundRectangle" Value="{StaticResource ButtonBackgroundColorHighlight}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <Style x:Key="ReorderUpButton" TargetType="Button">
        <Setter Property="OverridesDefaultStyle" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Canvas Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" ClipToBounds="True" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Rectangle x:Name="BackgroundRectangle" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" Fill="#D9D9D9" Margin="0"/>
                        <Line x:Name="Line1" X1="2.5" Y1="8" X2="6.5" Y2="4" Stroke="#7F7F7F" StrokeThickness="1.0"/>
                        <Line x:Name="Line2" X1="10" Y1="8" X2="6" Y2="4" Stroke="#7F7F7F" StrokeThickness="1.0"/>
                    </Canvas>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Rectangle.Fill" TargetName="BackgroundRectangle" Value="#999999"/>
                            <Setter Property="Line.Stroke" TargetName="Line1" Value="#FFFFFF"/>
                            <Setter Property="Line.Stroke" TargetName="Line2" Value="#FFFFFF"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ReorderDownButton" TargetType="Button">
        <Setter Property="OverridesDefaultStyle" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Canvas Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" ClipToBounds="True" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Rectangle x:Name="BackgroundRectangle" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" Fill="#D9D9D9" Margin="0"/>
                        <Line x:Name="Line1" X1="2.5" Y1="4" X2="6.5" Y2="8" Stroke="#7F7F7F" StrokeThickness="1.0"/>
                        <Line x:Name="Line2" X1="10" Y1="4" X2="6" Y2="8" Stroke="#7F7F7F" StrokeThickness="1.0"/>
                    </Canvas>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Rectangle.Fill" TargetName="BackgroundRectangle" Value="#999999"/>
                            <Setter Property="Line.Stroke" TargetName="Line1" Value="#FFFFFF"/>
                            <Setter Property="Line.Stroke" TargetName="Line2" Value="#FFFFFF"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="AddItemButton" TargetType="Button">
        <Setter Property="OverridesDefaultStyle" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Canvas Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" ClipToBounds="True" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Rectangle x:Name="BackgroundRectangle" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" Fill="#D9D9D9" Margin="0"/>
                        <Line x:Name="VerticalLine" X1="12" Y1="8" X2="12" Y2="16" Stroke="#666666" StrokeThickness="1.5"/>
                        <Line x:Name="HorizontalLine" Y1="12" X1="8" Y2="12" X2="16" Stroke="#666666" StrokeThickness="1.5"/>
                        <Ellipse x:Name="AddRulePartButtonEllipse" StrokeThickness="1" Canvas.Left="5" Canvas.Top="5" Stroke="#666666" Width="14" Height="14" />
                    </Canvas>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Rectangle.Fill" TargetName="BackgroundRectangle" Value="#999999"/>
                            <Setter Property="Ellipse.Stroke" TargetName="AddRulePartButtonEllipse" Value="#FFFFFF"/>
                            <Setter Property="Line.Stroke" TargetName="HorizontalLine" Value="#FFFFFF"/>
                            <Setter Property="Line.Stroke" TargetName="VerticalLine" Value="#FFFFFF"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="DeleteItemButton" TargetType="Button">
        <Setter Property="OverridesDefaultStyle" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Canvas Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" ClipToBounds="True" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Rectangle x:Name="BackgroundRectangle" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" Fill="#D9D9D9" Margin="0"/>
                        <Line x:Name="VerticalLine" X1="9" Y1="12" X2="15" Y2="18" Stroke="#666666" StrokeThickness="1.5"/>
                        <Line x:Name="HorizontalLine" Y1="18" X1="9" Y2="12" X2="15" Stroke="#666666" StrokeThickness="1.5"/>
                        <Ellipse x:Name="DeleteRulePartButtonEllipse" StrokeThickness="1" Canvas.Left="5" Canvas.Top="7.5" Stroke="#666666" Width="14" Height="14" />
                    </Canvas>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Rectangle.Fill" TargetName="BackgroundRectangle" Value="#D94141"/>
                            <Setter Property="Ellipse.Stroke" TargetName="DeleteRulePartButtonEllipse" Value="#FFFFFF"/>
                            <Setter Property="Line.Stroke" TargetName="HorizontalLine" Value="#FFFFFF"/>
                            <Setter Property="Line.Stroke" TargetName="VerticalLine" Value="#FFFFFF"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="EditItemButton" TargetType="Button">
        <Setter Property="OverridesDefaultStyle" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Canvas Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" ClipToBounds="True" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Rectangle x:Name="BackgroundRectangle" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" Fill="#D9D9D9" Margin="0"/>
                        <Line x:Name="VerticalLine" X1="9" Y1="12" X2="15" Y2="18" Stroke="#666666" StrokeThickness="1.5"/>
                    </Canvas>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Rectangle.Fill" TargetName="BackgroundRectangle" Value="#41A4D9"/>
                            <Setter Property="Line.Stroke" TargetName="VerticalLine" Value="#FFFFFF"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ImageButton" TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" ClipToBounds="True">
                        <Rectangle Name="ForegroundRectangle" Fill="DarkGray" Opacity="0"  Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" Panel.ZIndex="1"/>
                        <Image Source="{Binding Tag, RelativeSource={RelativeSource FindAncestor,AncestorType={x:Type Button}}}" Panel.ZIndex="0" Stretch="Fill"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Opacity" TargetName="ForegroundRectangle" Value="0.4"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="DefaultTabControlStyle" TargetType="TabItem">
        <Setter Property="Margin" Value="0,0,3,0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TabItem">
                    <Grid Name="Panel" Width="110" Height="27">
                        <Rectangle x:Name="BackgroundRectangle" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Stroke="{StaticResource WindowBackgroundColor}"/>
                        <ContentPresenter x:Name="ContentPresenter" Content="{TemplateBinding Header}" TextBlock.Foreground="{StaticResource FontColorDefault}" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <ContentPresenter.Resources>
                                <Style TargetType="TextBlock" BasedOn="{StaticResource ResourceKey=StandardText}"/>
                            </ContentPresenter.Resources>
                        </ContentPresenter>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Panel" Property="Background" Value="{StaticResource ButtonBackgroundColorHighlight}"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="False">
                            <Setter TargetName="Panel" Property="Background" Value="{StaticResource ButtonBackgroundColorDefault}" />
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="Panel" Property="Background" Value="{StaticResource ButtonBackgroundColorHighlight}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="DefaultScrollerViewerStyle" TargetType="ScrollViewer">
        <Setter Property="Padding" Value="0"/>
        <Setter Property="BorderThickness" Value="0px"/>
    </Style>
</ResourceDictionary>
