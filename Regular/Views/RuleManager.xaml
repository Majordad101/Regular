<Window x:Class="Regular.Views.RuleManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Regular.Views"
        mc:Ignorable="d"
        Title="RuleManager" Height="450" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button Name="ButtonAddNewRule" Content="Add Rule" Click="ButtonAddNewRule_Click"></Button>
        <ListBox Name="RegexRulesListBox" HorizontalAlignment="Left" BorderThickness="0" Background="Transparent" Padding="3" Width="595" Margin="0,0,0,0" Grid.Row="1" >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Width="431">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="26.5"/>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <Rectangle HorizontalAlignment="Stretch" Fill="#EBEBEB" VerticalAlignment="Stretch" Grid.ColumnSpan="2" Grid.RowSpan="2" Margin="-4,-1,-5,-1"/>
                        <TextBlock x:Name="RuleNameTextBlock" Text="{Binding RuleName}" FontSize="13" Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Margin="4,8,4,0"/>
                        <TextBlock x:Name="RegexStringTextBlock" Text="{Binding RegexString}" Foreground="#808080" Grid.Row="1" Grid.RowSpan="2" Grid.Column="0" Margin="5"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
