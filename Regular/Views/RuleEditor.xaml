<Window x:Class="Regular.Views.RuleEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Regular.Views"
        mc:Ignorable="d"
        Title="Rule Editor" Height="500" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition />
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="Rule Name" Grid.Row="0"/>
        <TextBox Name="TextblockInputRuleName" Text="Type Here..." Grid.Row="0" Grid.Column="1"/>
        <Label Content="Target Category" Grid.Row="1" ></Label>
        <ComboBox Name="ComboBoxInputCategory" Grid.Row="1" Grid.Column="1" SelectionChanged="ComboBoxInputCategory_SelectionChanged">
            <ComboBoxItem>Doors</ComboBoxItem>
            <ComboBoxItem>Floors</ComboBoxItem>
            <ComboBoxItem>Windows</ComboBoxItem>
        </ComboBox>
        <Label Content="Parameter To Test" Grid.Row="2" ></Label>
        <ComboBox Name="ComboBoxInputTargetParameter" Grid.Row="2" Grid.Column="1">
            <ComboBoxItem>Comments</ComboBoxItem>
            <ComboBoxItem>Mark</ComboBoxItem>
            <ComboBoxItem>Number</ComboBoxItem>
        </ComboBox>
        <ComboBox Name="ComboBoxInputRulePartType" Grid.Row="3" Grid.Column="1" Width="150" HorizontalAlignment="Left"/>
        <Button Name="AddRulePartButton" Content="Add" Width="50" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Right" Click="AddRulePartButton_Click"/>
        <Label Content="Edit Rule Parts" Grid.Row="3" ></Label>
        <ScrollViewer VerticalScrollBarVisibility="Visible" Grid.Row="4" Grid.ColumnSpan="2" PreviewMouseWheel="ScrollViewer_PreviewMouseWheel">
            <ListBox Name="RulePartsListBox">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Width="380">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="26.5"/>
                                <RowDefinition Height="30"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <Rectangle HorizontalAlignment="Stretch" Fill="#EBEBEB" VerticalAlignment="Stretch" Grid.ColumnSpan="2" Grid.RowSpan="2" Margin="-4,-1,-5,-1"/>
                            <TextBlock x:Name="RegexRulePartTypeTextBlock" Text="{Binding RuleType}" FontSize="13" Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Margin="4,8,4,0"/>
                            <TextBox x:Name="RegexRulePartUserInputTextBlock" Text="{Binding RawUserInputValue}" Width="100" FontSize="11" Grid.Row="1" Grid.Column="0" Grid.RowSpan="2" Margin="4,8,4,0"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>
        <Button Name="CloseButton" Content="OK" Grid.Row="6" Grid.Column="1"/>
    </Grid>
</Window>
